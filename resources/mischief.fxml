<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<BorderPane style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.rachmie.timetravel.ControllerMain">
   <center>
      <StackPane alignment="TOP_LEFT" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="wormhole" fitHeight="699.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@wormhole.jpg" />
               </image>
            </ImageView>
            <HBox alignment="CENTER" fillHeight="false" maxHeight="300.0" maxWidth="300.0" minHeight="300.0" minWidth="300.0" prefHeight="300.0" prefWidth="300.0" spacing="5.0" style="-fx-background-radius: 150; -fx-background-color: lightblue; -fx-border-color: grey; -fx-border-width: 4; -fx-border-radius: 150;" StackPane.alignment="CENTER">
               <children>
                  <ComboBox fx:id="monthSelector" prefWidth="100.0" promptText="Month" />
                  <TextField fx:id="yearEntry" prefWidth="80.0" promptText="Year" />
               </children>
            </HBox>
         </children>
      </StackPane>
   </center>
</BorderPane>
